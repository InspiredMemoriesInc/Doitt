<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signn_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup1gradient_shape"
    tools:context="in.inspiredmemories.doitt_theconfessionbase.SignnUpActivity">


    <ImageView
        android:id="@+id/white"
        android:src="@drawable/white"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical"
        android:layout_below="@+id/white">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_shape"
            android:padding="18dp"
            android:layout_marginLeft="30dp"
            android:textCursorDrawable="@null"
            android:layout_marginRight="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YOUR DOITT TAG"
            android:textCursorDrawable="@null"
            android:inputType="text"
            android:background="@drawable/edittext_shape"
            android:textSize="15sp"
            android:padding="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SECRET KEY"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:background="@drawable/edittext_shape"
            android:textSize="15sp"
            android:padding="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CONFIRM KEY"
            android:textCursorDrawable="@null"
            android:inputType="textVisiblePassword"
            android:background="@drawable/edittext_shape"
            android:textSize="15sp"
            android:padding="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp" />

        <Button

            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ripple2"
            android:text="Make It"
            android:textColor="#fff"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.125dp"
        android:background="#fff"
        android:layout_above="@+id/signin"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ripple1"
        android:text="Already have an account? Do It"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"/>

</RelativeLayout>
