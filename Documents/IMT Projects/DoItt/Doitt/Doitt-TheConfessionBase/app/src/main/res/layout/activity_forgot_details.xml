<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupgradient_shape"
    tools:context="in.inspiredmemories.doitt_theconfessionbase.ForgotDetails">


    <ImageView
        android:id="@+id/white"
        android:src="@drawable/white"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/white">

        <TextView
            android:id="@+id/thankyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:visibility="gone"
            android:text="Verification mail has been sent to "

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            android:fontFamily="sans-serif-light"
            android:textSize="25sp"
            android:inputType="textEmailAddress"
            android:background="@drawable/forgotedittext_shape"
            android:padding="18dp"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textCursorDrawable="@null"
            android:layout_marginRight="30dp"/>


        <Button

            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ripple2"
            android:text="Reset password"
            android:visibility="visible"
            android:textColor="#fff"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="20dp" />


    </LinearLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.125dp"
        android:background="#fff"
        android:layout_above="@+id/forgotdetails"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/forgotdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ripple"
        android:text="back to Do it"
        android:textColor="#fff"
        android:fontFamily="sans-serif-light"/>

</RelativeLayout>
