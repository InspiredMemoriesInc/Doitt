<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_launcher_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maingraadient_shape"
    tools:context="in.inspiredmemories.doitt_theconfessionbase.LauncherHomepage">


        <ImageView
            android:id="@+id/white"
            android:src="@drawable/white"
            android:layout_width="250sp"
            android:layout_height="200sp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="0dp"
            android:layout_margin="12dp"
            android:layout_marginRight="0dp"
            android:paddingLeft="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="0dp"
            android:orientation="vertical"
            android:layout_below="@+id/white">
            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/introd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70sp"
                android:textStyle="bold"
                android:fontFamily="cursive"/>
            <TextView
                android:id="@+id/introdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>


        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:text="Let's Go"
            android:textColor="#fff"
            android:padding="0dp"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"

            />

</RelativeLayout>
