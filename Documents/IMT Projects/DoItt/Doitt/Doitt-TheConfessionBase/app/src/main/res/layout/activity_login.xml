<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_shape"
    tools:context="in.inspiredmemories.doitt_theconfessionbase.LoginActivity">

    <ImageView
        android:id="@+id/white"
        android:src="@drawable/white"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical"
        android:layout_below="@+id/white">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DOITT TAG"
            android:textSize="15sp"
            android:inputType="text"
            android:background="@drawable/edittext_shape"
            android:padding="18dp"
            android:layout_marginLeft="30dp"
            android:textCursorDrawable="@null"
            android:layout_marginRight="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SECRET KEY"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:background="@drawable/edittext_shape"
            android:textSize="15sp"
            android:padding="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp" />

        <Button

            android:id="@+id/login_in_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:text="Do It"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/forgot_in_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forgot your DoItt details? Get help doing in."
            android:textSize="11sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#fff"
            android:background="@drawable/forgotbutton_shape"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"

            android:layout_marginBottom="0dp"
            android:paddingLeft="15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp">
            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="0.125dp"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="#fff"
                android:layout_weight="0.25"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"

                />
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0.125dp"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp">
            <Button

                android:id="@+id/fb"
                android:text="facebook"
                android:fontFamily="sans-serif-light"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/ripple"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <Button

                android:id="@+id/twitter"
                android:text="twitter"
                android:fontFamily="sans-serif-light"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/ripple"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <Button

                android:id="@+id/google"
                android:text="google+"
                android:fontFamily="sans-serif-light"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/ripple"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.125dp"
        android:background="#fff"
        android:layout_above="@+id/signup_in_login"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/signup_in_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ripple"
        android:text="New user? Create an account"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"/>
</RelativeLayout>
